{
    "name": "silex/silex",
    "description": "The PHP micro-framework based on the Symfony Components",
    "keywords": ["microframework"],
    "homepage": "https://silex.symfony.com",
    "license": "MIT",
    "authors": [
        {
            "name": "Fabien Potencier",
            "email": "fabien@symfony.com"
        },
        {
            "name": "Igor Wiedler",
            "email": "igor@wiedler.ch"
        }
    ],
    "require": {
        "php": ">=7.1.3",
        "pimple/pimple": "^3.0",
        "symfony/event-dispatcher": "^4.3",
        "symfony/http-foundation": "^4.3",
        "symfony/http-kernel": "^4.3",
        "symfony/routing": "^4.3"
    },
    "require-dev": {
        "symfony/asset": "^4.3",
        "symfony/expression-language": "^4.3",
        "symfony/security": "^4.3",
        "symfony/config": "^4.3",
        "symfony/form": "^4.3",
        "symfony/browser-kit": "^4.3",
        "symfony/css-selector": "^4.3",
        "symfony/debug": "^4.3",
        "symfony/dom-crawler": "^4.3",
        "symfony/finder": "^4.3",
        "symfony/intl": "^4.3",
        "symfony/monolog-bridge": "^4.3",
        "symfony/doctrine-bridge": "^4.3",
        "symfony/options-resolver": "^4.3",
        "symfony/phpunit-bridge": "^3.2",
        "symfony/process": "^4.3",
        "symfony/serializer": "^4.3",
        "symfony/translation": "^4.3",
        "symfony/twig-bridge": "^4.3",
        "symfony/validator": "^4.3",
        "symfony/var-dumper": "^4.3",
        "twig/twig": "^2.0",
        "doctrine/dbal": "^2.2",
        "swiftmailer/swiftmailer": "^5",
        "monolog/monolog": "^1.4.1",
        "symfony/web-link": "^4.3"
    },
    "replace": {
        "silex/api": "self.version",
        "silex/providers": "self.version"
    },
    "autoload": {
        "psr-4": { "Silex\\": "src/Silex" }
    },
    "autoload-dev" : {
        "psr-4": { "Silex\\Tests\\" : "tests/Silex/Tests" }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.3.x-dev"
        }
    }
}
